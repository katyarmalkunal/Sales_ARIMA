import pandas as pd
df=pd.read_csv("sales.csv")

df.head()

df.columns

df.index=pd.to_datetime(df['Month'])
df.drop(['Month'],axis=1,inplace=True)

df.head()

df.info()

import matplotlib.pyplot as plt

plt.plot(df)
plt.xlabel('Month')
plt.ylabel('Sales')
plt.title("Month Vs Sales")
plt.show()

rolling_mean=df.rolling(window=12).mean()
rolling_std=df.rolling(window=12).std()
rolling_mean

plt.plot(df,color='yellow',label='Original Data')
plt.plot(rolling_mean,color='blue',label="Rolling Mean")
plt.plot(rolling_std,color="green",label="Rolling Std")
plt.legend()

import numpy as np
df_log=np.log(df)
plt.plot(df_log)

df_log_shift=df_log - df_log.shift()
plt.plot(df_log_shift)

rolling_mean_log=df_log_shift.rolling(window=12).mean()
rolling_std_log=df_log_shift.rolling(window=12).std()
rolling_mean_log

plt.plot(df_log_shift,color='yellow',label='Original Data')
plt.plot(rolling_mean_log,color='blue',label="Rolling Mean")
plt.plot(rolling_std_log,color="green",label="Rolling Std")
plt.legend()

from statsmodels.graphics.tsaplots import plot_acf
from statsmodels.graphics.tsaplots import plot_pacf

plot_acf(df_log)
plt.show()
plot_pacf(df_log)
plt.ylim((-2.5,2.5))
plt.show()

df_log.dropna(inplace=True)
df_log.head()

# p value can be 1 or 2
# & q value is mostly 1...but can be 2 as well

from statsmodels.tsa.arima_model import ARIMA

model=ARIMA(df_log,order=(2,1,2))
result=model.fit(disp=1)
rss=np.sum((result.fittedvalues-df_log_shift['Sales'])**2)
plt.plot(df_log_shift)
plt.plot(result.fittedvalues,color="red")
plt.show()
print("RSS value is :- %f " %rss)

predictions=np.exp(result.fittedvalues)

#predictions=np.exp(predictions_log)
plt.plot(df_log_shift)
plt.plot(predictions)
plt.show()

result.plot_predict(1,150)

df_log.head()

result.forecast(steps=24)

